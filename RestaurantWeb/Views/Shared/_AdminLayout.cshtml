
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Lounge Cafe | Admin Paneli</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;600&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">

    <style>
        :root {
            --bg-dark: #121212;
            --sidebar-bg: #1e1e1e;
            --card-bg: #252525;
            --accent-color: #bb86fc; /* Mor tonları cafe konseptine uyar */
            --text-main: #e0e0e0;
            --text-muted: #a0a0a0;
            --border-color: #333333;
        }

        body {
            font-family: 'Inter', sans-serif;
            background-color: var(--bg-dark);
            color: var(--text-main);
            overflow-x: hidden;
        }

        /* Sidebar Styling */
        #sidebar {
            min-width: 260px;
            max-width: 260px;
            background: var(--sidebar-bg);
            min-height: 100vh;
            transition: all 0.3s;
            border-right: 1px solid var(--border-color);
            position: fixed;
        }

        .sidebar-header {
            padding: 20px;
            text-align: center;
            border-bottom: 1px solid var(--border-color);
        }

        .sidebar-header h3 {
            font-size: 1.2rem;
            font-weight: 600;
            color: var(--accent-color);
            margin: 0;
            letter-spacing: 1px;
        }

        ul.components {
            padding: 20px 0;
        }

        ul li a {
            padding: 12px 25px;
            display: block;
            color: var(--text-main);
            text-decoration: none;
            font-size: 0.95rem;
            transition: 0.3s;
        }

        ul li a:hover {
            background: #2d2d2d;
            color: var(--accent-color);
            padding-left: 35px;
        }

        ul li.active > a {
            color: var(--accent-color);
            background: #2d2d2d;
            border-left: 4px solid var(--accent-color);
        }

        ul li a i {
            margin-right: 10px;
            width: 20px;
        }

        /* Content Area */
        #content {
            width: calc(100% - 260px);
            margin-left: 260px;
            min-height: 100vh;
            transition: all 0.3s;
        }

        .navbar-admin {
            background: var(--sidebar-bg);
            border-bottom: 1px solid var(--border-color);
            padding: 15px 30px;
        }

        .admin-card {
            background: var(--card-bg);
            border: 1px solid var(--border-color);
            border-radius: 12px;
            padding: 20px;
            margin-bottom: 25px;
        }

        .footer-admin {
            padding: 20px;
            text-align: center;
            font-size: 0.8rem;
            color: var(--text-muted);
            border-top: 1px solid var(--border-color);
        }

        /* Responsive */
        media (max-width: 768px) {
            #sidebar { margin-left: -260px; }
            #sidebar.active { margin-left: 0; }
            #content { width: 100%; margin-left: 0; }
            #content.active { margin-left: 260px; }
        }
    </style>
</head>
<body>

    <div class="wrapper d-flex">
        <nav id="sidebar">
            <div class="sidebar-header">
                <h3>LOUNGE ADMIN</h3>
            </div>

            <ul class="list-unstyled components">
                <li>
                    <a href="/Admin/Index/"><i class="fa-solid fa-chart-line"></i> Dashboard</a>
                </li>
                <li>
                    <a href="/Admin/CategoryIndex/"><i class="fa-solid fa-list"></i> Kategoriler</a>
                </li>
                <li>
                    <a href="/Admin/MenuItem/"><i class="fa-solid fa-utensils"></i> Menü Öğeleri</a>
                </li>
                <li>
                    <a href="/Admin/OurStory/"><i class="fa-solid fa-circle-info"></i> Bizim Hikayemiz</a>
                </li>
                <li>
                    <a href="/Admin/GalleryPage/"><i class="fa-solid fa-image"></i> Galeri Yönetimi</a>
                </li>
                <li>
                    <a href="/Admin/CommentList/"><i class="fa-solid fa-comments"></i> Yorumlar</a>
                </li>
                <li>
                    <a href="/Admin/MailList/"><i class="fa-solid fa-envelope"></i> Mail Listesi</a>
                </li>
                <li>
                    <a href="/Admin/Settings/"> <i class="fa-solid fa-gears me-3 text-accent" style="width: 20px;"></i> Sistem Ayarları</a>
                </li>
                <hr style="border-color: var(--border-color);">
                <li>
                    <a href="/Main/Index/" target="_blank"><i class="fa-solid fa-eye"></i> Siteye Git</a>
                </li>
                <li>
                    <a href="/Login/Logout"><i class="fa-solid fa-right-from-bracket"></i> Çıkış Yap</a>
                </li>
            </ul>
        </nav>

        <div id="content">
            <nav class="navbar navbar-admin d-flex justify-content-between align-items-center">
                <button type="button" id="sidebarCollapse" class="btn btn-outline-light border-0">
                </button>
                <div class="user-info">
                    <span class="text-white me-2">Hoş geldin,</span>
                    <strong>@User.Identity.Name</strong>
                </div>
            </nav>

            <div class="container-fluid p-4">
                @RenderBody()
            </div>

            <footer class="footer-admin">
                &copy; @DateTime.Now.Year - Lounge Cafe Admin Panel | <strong>Mehmet Berke Arslan</strong>
            </footer>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

    <script>
        $(document).ready(function () {
            $('#sidebarCollapse').on('click', function () {
                $('#sidebar, #content').toggleClass('active');
            });
        });
                $(document).ready(function () {
            // 1. Mevcut sayfanın URL yolunu al (Örn: /Admin/CategoryIndex)
            var currentPath = window.location.pathname;

            // 2. Sidebar içindeki tüm linkleri kontrol et
            $('.components li a').each(function () {
                var href = $(this).attr('href');

                // 3. Eğer linkin href değeri mevcut URL ile eşleşiyorsa
                if (currentPath === href) {
                    // Önce tüm li'lerden active sınıfını kaldır (dashboard varsayılanını temizler)
                    $('.components li').removeClass('active');

                    // Mevcut linkin bağlı olduğu li'ye active sınıfını ekle
                    $(this).parent('li').addClass('active');
                }
            });

            // Sidebar aç/kapat butonu kodun burada kalmaya devam etsin
            $('#sidebarCollapse').on('click', function () {
                $('#sidebar, #content').toggleClass('active');
            });
        });
    </script>

</body>
</html>
