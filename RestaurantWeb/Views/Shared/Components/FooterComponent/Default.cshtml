@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer localizer
@model FooterViewModel
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" integrity="sha512-DTOQO9RWCH3ppGqcWaEA1BIZOC6xxalwEsw9c2QQeAIftl+Vegovlnee1c9QX4TctnWMn13TZye+giMm8e2LwA==" crossorigin="anonymous" referrerpolicy="no-referrer" />
<footer id="footer" class="container s-footer">

    <div class="row s-footer__top row-x-center">
        <div class="column xl-6 lg-8 md-10 footer-block footer-newsletter">

            <h5>
                @localizer["Güncellemelerden, haberlerden ve özel tekliflerden haberdar olmak için e-posta listemize abone olun."]
            </h5>

            <div class="subscribe-form">
                <form  class="mc-form" asp-controller="Newsletter" asp-action="Subscribe" method="post">
                    <div class="mc-input-wrap">
                        <input type="email" name="Mail" id="mce-EMAIL" placeholder="@localizer["Mail Adresiniz"]" title="The domain portion of the email address is invalid (the portion after the )." pattern="^([^\x00-\x20\x22\x28\x29\x2c\x2e\x3a-\x3c\x3e\x40\x5b-\x5d\x7f-\xff]+|\x22([^\x0d\x22\x5c\x80-\xff]|\x5c[\x00-\x7f])*\x22)(\x2e([^\x00-\x20\x22\x28\x29\x2c\x2e\x3a-\x3c\x3e\x40\x5b-\x5d\x7f-\xff]+|\x22([^\x0d\x22\x5c\x80-\xff]|\x5c[\x00-\x7f])*\x22))*\x40([^\x00-\x20\x22\x28\x29\x2c\x2e\x3a-\x3c\x3e\x40\x5b-\x5d\x7f-\xff]+|\x5b([^\x0d\x5b-\x5d\x80-\xff]|\x5c[\x00-\x7f])*\x5d)(\x2e([^\x00-\x20\x22\x28\x29\x2c\x2e\x3a-\x3c\x3e\x40\x5b-\x5d\x7f-\xff]+|\x5b([^\x0d\x5b-\x5d\x80-\xff]|\x5c[\x00-\x7f])*\x5d))*(\.\w{2,})+$" required>
                        <input type="submit" name="subscribe" value="@localizer["Abone Ol"]" class="btn btn--primary"> 
                        <!-- <div style="position: absolute; left: -5000px;" aria-hidden="true"><input type="text" name="b_cdb7b577e41181934ed6a6a44_9a91cfe7b3" tabindex="-1" value=""></div> -->
                    </div>
                    <div class="mc-status"></div>
                </form>
            </div> <!-- end subscribe-form -->

        </div> <!-- end footer-newsletter -->
    </div> <!-- end s-footer__top -->

    <div class="row s-footer__main">
        <div class="column xl-3 lg-12 footer-block s-footer__main-start">

            <div class="s-footer__logo">
                <a class="logo" href="/Main/Index/">
                    <img src="/Lounge-1.0.0/images/logo.svg" alt="Homepage">
                </a>
            </div>

            <ul class="s-footer__social social-list">
                @foreach (var x in Model.SocialMedias)
                {
                    <li>
                        <a href="@x.Link" target="_blank">
                            <i class="@x.Icon" style="font-size: 24px;color:white"></i>
                            <span class="u-screen-reader-text">@x.Platform</span>
                        </a>
                    </li>
                }

            </ul>

        </div>


        <div class="column xl-9 lg-12 s-footer__main-end grid-cols grid-cols--wrap">

            <div class="grid-cols__column footer-block">
                <h6>@localizer["Konum"]</h6>
                <p>
                    @Model.Contacts.Adress
                </p>
            </div>

            <div class="grid-cols__column footer-block">
                <h6>@localizer["İletişim"]</h6>
                <ul class="link-list">
                    <li><a href="@Model.Contacts.Email">@Model.Contacts.Email</a></li>
                    <li><a href="tel:@Model.Contacts.Phone">@Model.Contacts.Phone</a></li>
                </ul>
            </div>

            <div class="grid-cols__column footer-block">
                <h6>@localizer["Açılış Saatleri"]</h6>
                <ul class="opening-hours">
                    @foreach (var x in Model.OpeningHours)
                    {
                        <li><span class="opening-hours__days">@localizer["Hafta içi"]</span><span class="opening-hours__time">@x.WeekdaysOpen - @x.WeekdaysClose</span></li>
                        <li><span class="opening-hours__days">@localizer["Hafta sonu"]</span><span class="opening-hours__time">@x.WeekendsOpen - @x.WeekendsClose</span></li>
                    }
                </ul>
            </div>

        </div> <!-- s-footer__main-end -->

    </div> <!-- end  s-footer__main-content -->

    <div class="row s-footer__bottom">

        <div class="column xl-6 lg-12">
            <p class="ss-copyright">
                <span id="secretDoor" style="cursor: default;">© @DateTime.Now.Year</span>
                <span><a href="https://www.linkedin.com/in/mehmetberkearslan/">Mehmet Berke Arslan </a>@localizer["Tarafından tasarlandı"]</span>

            </p>
        </div>

    </div> <!-- end s-footer__bottom -->

    <div class="ss-go-top">
        <a class="smoothscroll" title="Back to Top" href="#top">
            <svg clip-rule="evenodd" fill-rule="evenodd" stroke-linejoin="round" stroke-miterlimit="2" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path d="m14.523 18.787s4.501-4.505 6.255-6.26c.146-.146.219-.338.219-.53s-.073-.383-.219-.53c-1.753-1.754-6.255-6.258-6.255-6.258-.144-.145-.334-.217-.524-.217-.193 0-.385.074-.532.221-.293.292-.295.766-.004 1.056l4.978 4.978h-14.692c-.414 0-.75.336-.75.75s.336.75.75.75h14.692l-4.979 4.979c-.289.289-.286.762.006 1.054.148.148.341.222.533.222.19 0 .378-.072.522-.215z" fill-rule="nonzero" /></svg>
        </a>
        <span>Back To Top</span>
    </div> <!-- end ss-go-top -->

</footer>

<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

<script>
    @if (TempData["SubscribeSuccess"] != null)
    {
            <text>
            Swal.fire({
                title: '<span style="font-size: 32px;">@localizer["Başarılı!"]</span>',
                html: '<p style="font-size: 20px;">@localizer["Bültenimize başarıyla abone oldunuz."]</p>',
                icon: 'success',
                iconColor: '#52796f', // Formundaki yeşil buton tonu
                background: '#151515', // Projenin arka plan siyahı
                color: '#ffffff',
                width: '600px',        // Pencere genişliği (Varsayılan 32em'dir, biz büyüttük)
                padding: '3em',        // İç boşluk
                confirmButtonColor: '#52796f',
                confirmButtonText: '<span style="padding: 0 30px; font-size: 18px;">@localizer["Tamam"]</span>',
                showClass: {
                    popup: 'animate__animated animate__fadeInDown' // Varsa animasyon kütüphanenle uyumlu olur
                }
            });
            </text>
    }
</script>
<script>
    let clickCount = 0;
    document.getElementById('secretDoor').addEventListener('click', function() {
        clickCount++;
        if (clickCount === 3) {
            window.location.href = '/Admin/Index';
        }
        // 2 saniye içinde 3 tık olmazsa sayacı sıfırla
        setTimeout(() => { clickCount = 0; }, 2000);
    });
</script>