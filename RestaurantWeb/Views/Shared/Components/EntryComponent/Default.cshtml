@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer localizer
@model HomePage
<link rel="stylesheet" href="https://cdn.jsdelivr.net/gh/lipis/flag-icons@7.0.0/css/flag-icons.min.css" />
<style>
    .intro-block-content__social li a {
        display: inline-block;
        transition: transform 0.2s ease-in-out;
    }

    .intro-block-content__social .fi {
        font-size: 1.8rem; /* Bayrak boyutunu buradan ayarlayabilirsin */
        border-radius: 2px; /* Köşeleri hafif yuvarlatmak daha modern durur */
    }

    .intro-block-content__social li a:hover {
        transform: scale(1.2); /* Üzerine gelince hafif büyüme efekti */
    }
</style>
<section id="intro" class="container s-intro target-section">

    <div class="grid-block s-intro__content">

        <div class="intro-header">
            <div class="intro-header__overline">@localizer["Hoşgeldiniz"]</div>
            <h1 class="intro-header__big-type">
                @Model.RestaurantName
            </h1>
        </div> <!-- end intro-header -->

        <figure class="intro-pic-primary">
            <img src="/Lounge-1.0.0/images/intro-pic-primary.jpg"
                 srcset="/Lounge-1.0.0/images/intro-pic-primary.jpg 1x,
                         /Lounge-1.0.0/images/intro-pic-primary@2x.jpg 2x" alt="">
        </figure> <!-- end intro-pic-primary -->

        <div class="intro-block-content">

            <figure class="intro-block-content__pic">
                <img src="/Lounge-1.0.0/images/intro-pic-secondary.jpg"
                     srcset="/Lounge-1.0.0/images/intro-pic-secondary.jpg 1x,
                             /Lounge-1.0.0/images/intro-pic-secondary@2x.jpg 2x" alt="">
            </figure> <!-- end intro-pic-secondary -->

            <div class="intro-block-content__text-wrap">
                <p class="intro-block-content__text">
                    @{
                        string rightDesc = ViewBag.SelectedLanguage switch
                        {
                            "tr" =>Model.RightDescription,
                            "en" => Model.RightDescriptionEn,
                            "es" => Model.RightDescriptionEs,
                            _ => Model.RightDescription // Varsayılan
                        };
                    }
                    @rightDesc
                </p>

                <ul class="intro-block-content__social">
                    <li>
                        <a asp-controller="Culture" asp-action="SetLanguage"
                           asp-route-culture="tr" asp-route-returnUrl="@Context.Request.Path">
                            TR
                            <span class="fi fi-tr"></span>
                        </a>
                    </li>
                    <li>
                        <a asp-controller="Culture" asp-action="SetLanguage"
                           asp-route-culture="en" asp-route-returnUrl="@Context.Request.Path">
                            EN
                            <span class="fi fi-gb"></span>
                        </a>
                    </li>
                    <li>
                        <a asp-controller="Culture" asp-action="SetLanguage"
                           asp-route-culture="es" asp-route-returnUrl="@Context.Request.Path">
                            ES
                            <span class="fi fi-es"></span>
                        </a>
                    </li>
                </ul>
            </div> <!-- end intro-block-content__social -->

        </div> <!-- end intro-block-content -->

        <div class="intro-scroll">
            <a class="smoothscroll" href="#about">
                <span class="intro-scroll__circle-text"></span>
                <span class="intro-scroll__text u-screen-reader-text">Scroll Down</span>
                <div class="intro-scroll__icon">
                    <svg clip-rule="evenodd" fill-rule="evenodd" stroke-linejoin="round" stroke-miterlimit="2" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path d="m5.214 14.522s4.505 4.502 6.259 6.255c.146.147.338.22.53.22s.384-.073.53-.22c1.754-1.752 6.249-6.244 6.249-6.244.144-.144.216-.334.217-.523 0-.193-.074-.386-.221-.534-.293-.293-.766-.294-1.057-.004l-4.968 4.968v-14.692c0-.414-.336-.75-.75-.75s-.75.336-.75.75v14.692l-4.979-4.978c-.289-.289-.761-.287-1.054.006-.148.148-.222.341-.221.534 0 .189.071.377.215.52z" fill-rule="nonzero" /></svg>
                </div>
            </a>
        </div> <!-- end intro-scroll -->

    </div> <!-- grid-block -->

</section>