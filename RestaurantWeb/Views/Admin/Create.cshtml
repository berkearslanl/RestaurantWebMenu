@model List<RestaurantWeb.DAL.Entities.Category>
@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<div class="container-fluid">
    <div class="row">
        <div class="col-lg-9 mx-auto">
            <div class="admin-card shadow-sm">
                <h3 class="fw-bold mb-4">Yeni Menü Öğesi Oluştur</h3>
                <form  method="post">
                    
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label class="form-label text-white small fw-bold">ÜRÜN ADI (TR)</label>
                            <input type="text" name="Name" class="form-control bg-dark border-secondary text-white" required>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="form-label text-white small fw-bold">ÜRÜN ADI (EN)</label>
                            <input type="text" name="NameEn" class="form-control bg-dark border-secondary text-white" required>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="form-label text-white small fw-bold">ÜRÜN ADI (ES)</label>
                            <input type="text" name="NameEs" class="form-control bg-dark border-secondary text-white" required>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="form-label text-white small fw-bold">KATEGORİ SEÇİN</label>
                            <select name="CategoryId" class="form-select bg-dark border-secondary text-white" required>
                                <option value="">Kategori Seçiniz...</option>
                                @foreach (var cat in ViewBag.Categories)
                                {
                                    <option value="@cat.CategoryId">@cat.CategoryName</option>
                                }
                            </select>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label class="form-label text-white small fw-bold">FİYAT</label>
                            <div class="input-group">
                                <span class="input-group-text bg-secondary border-secondary text-white">₺</span>
                                <input type="number" step="1" name="Price" class="form-control bg-dark border-secondary text-white" required>
                            </div>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label class="form-label text-white small fw-bold">ÜRÜN AÇIKLAMASI (TR)</label>
                        <textarea name="Description" class="form-control bg-dark border-secondary text-white" rows="3"></textarea>
                    </div>
                    <div class="mb-3">
                        <label class="form-label text-white small fw-bold">ÜRÜN AÇIKLAMASI (EN)</label>
                        <textarea name="DescriptionEn" class="form-control bg-dark border-secondary text-white" rows="3"></textarea>
                    </div>
                    <div class="mb-3">
                        <label class="form-label text-white small fw-bold">ÜRÜN AÇIKLAMASI (ES)</label>
                        <textarea name="DescriptionEs" class="form-control bg-dark border-secondary text-white" rows="3"></textarea>
                    </div>

                    <div class="d-flex justify-content-between mt-4">
                        <a href="/Admin/MenuItem/" class="btn btn-outline-light px-4">İptal</a>
                        <button type="submit" class="btn btn-primary px-5">Ürünü Kaydet</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
