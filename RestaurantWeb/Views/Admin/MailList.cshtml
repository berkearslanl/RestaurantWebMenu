@model List<RestaurantWeb.DAL.Entities.Newsletter>
@{
    ViewData["Title"] = "MailList";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@{
    // Geçici değişkenler (Senin döngü mantığına uyum sağlaması için)
    string textclass = "";
    string text = "";
    string title = "";
    string iconclass = "";
    string butonclass = "";
    string ex = "";
}

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col-12">
            <h2 class="fw-bold">Mail Listesi</h2>
            <p class="text-white">Bültene abone olan kullanıcıları buradan yönetebilir ve durumlarını değiştirebilirsiniz.</p>
        </div>
    </div>

    <div class="admin-card shadow-sm">
        <div class="table-responsive">
            <table class="table table-dark table-hover align-middle">
                <thead>
                    <tr class="text-muted border-bottom border-secondary">
                        <th style="width: 80px;">#</th>
                        <th>E-Posta Adresi</th>
                        <th class="text-center">Durum</th>
                        <th class="text-end">İşlemler</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        if (item.Status == true)
                        {
                            textclass = "badge bg-success-subtle text-success border border-success px-3";
                            text = "Abone Aktif";
                            title = "Aboneliği Durdur (Pasif Yap)";
                            iconclass = "fa-solid fa-user-slash";
                            butonclass = "btn btn-sm btn-outline-danger";
                            ex = "/Admin/MailGetPassive";
                        }
                        else
                        {
                            textclass = "badge bg-danger-subtle text-danger border border-danger px-3";
                            text = "Abone Pasif";
                            title = "Aboneliği Yeniden Başlat (Aktif Yap)";
                            iconclass = "fa-solid fa-user-check";
                            butonclass = "btn btn-sm btn-outline-success";
                            ex = "/Admin/MailGetActive";
                        }

                        <tr>
                            <td>@item.NewsletterId</td>
                            <td class="fw-bold text-info">@item.Mail</td>
                            <td class="text-center">
                                <span class="@textclass">@text</span>
                            </td>
                            <td class="text-end">
                                <a href="@ex/@item.NewsletterId" class="@butonclass" title="@title">
                                    <i class="@iconclass"></i>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<style>
    .table-hover tbody tr:hover {
        background-color: rgba(187, 134, 252, 0.05); /* Sidebar moru ile hafif vurgu */
    }

    .text-info {
        color: #80d8ff !important; /* E-postalar daha okunaklı olsun diye */
    }
</style>

