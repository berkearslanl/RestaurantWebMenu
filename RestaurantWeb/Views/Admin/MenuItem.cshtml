@model List<RestaurantWeb.DAL.Entities.MenuItem>
@{
    ViewData["Title"] = "MenuItem";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col-md-6">
            <h2 class="fw-bold">Yemek & İçecek Menüsü</h2>
            <p class="text-white">Menüdeki ürünleri, fiyatları ve kategorileri buradan yönetin.</p>
        </div>
        <div class="col-md-6 text-md-end align-self-center">
            <a href="/Admin/Create" class="btn btn-primary shadow-sm">
                <i class="fa-solid fa-plus me-2"></i>Yeni Ürün Ekle
            </a>
        </div>
    </div>

    <div class="admin-card shadow-sm">
        <div class="table-responsive">
            <table class="table table-dark table-hover align-middle">
                <thead>
                    <tr class="text-white border-bottom border-secondary">
                        <th>Ürün Adı</th>
                        <th>Kategori</th>
                        <th>Fiyat</th>
                        <th class="text-center">Durum</th>
                        <th class="text-end">İşlemler</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                <div class="fw-bold">@item.Name</div>
                                <small class="text-primary">@item.Description.Substring(0, Math.Min(item.Description.Length, 30))...</small>
                            </td>
                            <td>
                                <span class="badge bg-secondary">@item.Category.CategoryName</span>
                            </td>
                            <td class="fw-bold text-success">@item.Price ₺</td>
                            <td class="text-center">
                                <span class="badge @(item.Status ? "bg-success-subtle text-success" : "bg-danger-subtle text-danger")">
                                    @(item.Status ? "Satışta" : "Yok")
                                </span>
                            </td>
                            <td class="text-end">
                                <div class="btn-group">
                                    <a href="/Admin/MenuUpdate/@item.MenuItemId" class="btn btn-sm btn-outline-warning"><i class="fa-solid fa-pen"></i></a>
                                    <a href="/Admin/ChangeStatus/@item.MenuItemId" class="btn btn-sm @(item.Status ? "btn-outline-danger" : "btn-outline-success") ms-2">
                                        <i class="fa-solid @(item.Status ? "fa-trash" : "fa-rotate-left")"></i>
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
