@model List<Comment>
@{
    ViewData["Title"] = "Dashboard";
    Layout = "_AdminLayout";
}
@{
    string text = "";
    string textclass = "";
}
<div class="container-fluid">
    <div class="row mb-4">
        <div class="col-12">
            <h2 class="fw-bold">Genel Bakış</h2>
            <p class="text-white">Restoranınızdaki son durum ve istatistikler.</p>
        </div>
    </div>

    <div class="row mb-4">
        <div class="col-md-3">
            <div class="admin-card text-center shadow-sm">
                <i class="fa-solid fa-utensils fa-2x mb-3" style="color: var(--accent-color);"></i>
                <h4 class="fw-bold">@ViewBag.menuitem</h4>
                <p class="text-white mb-0">Toplam Menü Öğesi</p>
            </div>
        </div>
        <div class="col-md-3">
            <div class="admin-card text-center shadow-sm">
                <i class="fa-solid fa-list-check fa-2x mb-3 text-info"></i>
                <h4 class="fw-bold">@ViewBag.category</h4>
                <p class="text-white mb-0">Aktif Kategori</p>
            </div>
        </div>
        <div class="col-md-3">
            <div class="admin-card text-center shadow-sm">
                <i class="fa-solid fa-comments fa-2x mb-3 text-warning"></i>
                <h4 class="fw-bold">@ViewBag.comment</h4>
                <p class="text-white mb-0">Toplam Yorum</p>
            </div>
        </div>
        <div class="col-md-3">
            <div class="admin-card text-center shadow-sm">
                <i class="fa-solid fa-envelope fa-2x mb-3 text-success"></i>
                <h4 class="fw-bold">@ViewBag.newsletter</h4>
                <p class="text-white mb-0">Abone Sayısı</p>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-8">
            <div class="admin-card shadow-sm h-100">
                <div class="d-flex justify-content-between align-items-center mb-4">
                    <h5 class="mb-0 fw-bold"><i class="fa-solid fa-comment-dots me-2"></i>Son Gelen Yorumlar</h5>
                    <a href="/Admin/CommentList/" class="btn btn-sm btn-outline-light">Tümünü Gör</a>
                </div>
                <div class="table-responsive">
                    <table class="table table-dark table-hover align-middle">
                        <thead class="text-muted">
                            <tr>
                                <th>Kullanıcı</th>
                                <th>Şehir</th>
                                <th>Yorum</th>
                                <th>Durum</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var x in Model)
                            {
                                if (x.IsSeeHome==true)
                                {
                                    text = "Ana Sayfada Gözüküyor";
                                    textclass = "text-success";
                                }
                                else
                                {
                                    text = "Ana Sayfada Gözükmüyor";
                                    textclass = "text-danger";
                                }
                                <tr>
                                    <td>@x.Username</td>
                                    <td>@x.City</td>
                                    <td>@x.Content</td>
                                    <td class="@textclass">@text</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        <div class="col-lg-4">
            <div class="admin-card shadow-sm">
                <h5 class="mb-4 fw-bold"><i class="fa-solid fa-bolt me-2 text-warning"></i>Hızlı İşlemler</h5>
                <div class="d-grid gap-3">
                    <a href="/Admin/Create" class="btn btn-primary py-3">
                        <i class="fa-solid fa-plus me-2"></i>Yeni Yemek Ekle
                    </a>
                    <a href="/Admin/CategoryAdd/" class="btn btn-secondary py-3">
                        <i class="fa-solid fa-folder-plus me-2"></i>Kategori Oluştur
                    </a>
                    <a href="/Admin/GalleryPage/" class="btn btn-info py-3 text-white">
                        <i class="fa-solid fa-cloud-arrow-up me-2"></i>Galeriye Fotoğraf Yükle
                    </a>
                </div>
            </div>

            <div class="admin-card mt-3 border-start border-4 border-primary">
                <p class="mb-0 small text-white">Sistem Durumu</p>
                <h6 class="mb-0 text-success"><i class="fa-solid fa-circle-check me-2"></i>Sunucu Aktif</h6>
            </div>
        </div>
    </div>
</div>