@{
    Layout = null; // Hata sayfasında karmaşa olmaması için layout kullanmıyoruz
}
<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Hoppala! Bir Şeyler Ters Gitti</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <style>
        body {
            background-color: #121212;
            color: #fff;
            height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            text-align: center;
        }

        .error-code {
            font-size: 10rem;
            font-weight: 900;
            color: #bb86fc;
            line-height: 1;
            margin-bottom: 20px;
            text-shadow: 5px 5px 0px #3700b3;
        }

        .error-text {
            font-size: 1.5rem;
            color: #b0b0b0;
            margin-bottom: 30px;
        }

        .btn-home {
            background-color: #bb86fc;
            color: #121212;
            font-weight: bold;
            padding: 12px 30px;
            border-radius: 50px;
            text-decoration: none;
            transition: 0.3s;
        }

            .btn-home:hover {
                background-color: #9965f4;
                color: #fff;
                transform: scale(1.05);
            }
    </style>
</head>
<body>
    <div class="container">
        <div class="error-code">404</div>
        <h2 class="mb-3">Sayfa Bulunamadı!</h2>
        <p class="error-text">Aradığın lezzeti burada bulamadık ama ana sayfada harika seçeneklerimiz var.</p>
        <a href="/Main/Index/" class="btn btn-home"><i class="fa-solid fa-house me-2"></i>Lezzetlere Geri Dön</a>
    </div>
</body>
</html>